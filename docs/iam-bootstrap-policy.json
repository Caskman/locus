{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowAppToManageItsOwnBuckets",
            "Effect": "Allow",
            "Action": [
                "s3:CreateBucket",
                "s3:ListAllMyBuckets",
                "s3:GetBucketLocation"
            ],
            "Resource": "*"
        },
        {
            "Sid": "AllowAppToReadWriteItsBuckets",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:ListBucket",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::tracker-data-*",
                "arn:aws:s3:::tracker-data-*/*"
            ]
        }
    ]
}
